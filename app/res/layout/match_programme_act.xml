<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_home_bg"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel_hehe"
                    android:background="@drawable/match_bg">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:src="@drawable/back_white_img"/>

                    <ImageView
                        android:id="@+id/shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/share_img"
                        android:padding="15dp"
                        android:src="@drawable/love_n"/>

                    <ImageView
                        android:id="@+id/more_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/more_img"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@+id/more_img"
                        android:background="@drawable/share_img"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/user_img"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/create_duihui"/>

                            <TextView
                                android:id="@+id/teamA_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_img"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/bifen"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:text="VS"
                            android:textColor="@color/white"
                            android:textSize="36sp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/user_img1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="50dp"
                                android:src="@drawable/create_duihui"/>

                            <TextView
                                android:id="@+id/teamB_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_img1"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/add_lin"
                    android:visibility="gone"
                    android:orientation="vertical"
                    >
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tab_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="概况"
                        android:textColor="@color/color_green"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tab_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="赛况"
                        android:textColor="@color/color_66"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tab_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp"
                        android:text="数据"
                        android:textColor="@color/color_66"
                        android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@color/color_green"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@color/color_green"
                        android:visibility="invisible"/>

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:background="@color/color_green"
                        android:visibility="invisible"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <View
        android:id="@+id/zz_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone"

        />

    <LinearLayout
        android:id="@+id/edit_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/xunlian_bg"
        android:orientation="vertical"
        android:visibility="gone"

        >

        <TextView
            android:id="@+id/edit_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="编辑比赛"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/cancle_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="取消训练"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/cancle_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/cancle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/color_63"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/cancle_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_bg_detail"
            android:gravity="center"
            android:hint=""
            android:maxLength="6"
            android:maxLines="1"
            android:padding="15dp"
            android:textColor="@color/color_63"
            android:textSize="14sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/cancle_cancle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/cancle_enter"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/duifu_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/duifu_type1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="红"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="橙"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="黄"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="绿"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="蓝"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="紫"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="黑"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="白"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="灰"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />

            <TextView
                android:id="@+id/duifu_type10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="粉"
                android:textColor="@color/color_63"
                android:textSize="14sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#e4e4e4"
                />


        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/vv_z"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</RelativeLayout>
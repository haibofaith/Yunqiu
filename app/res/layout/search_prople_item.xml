<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp"

        >

        <com.kball.function.other.CircleImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img"
            android:background="@drawable/user_img_bg"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img1"
            android:textColor="@color/color_63"
            android:textSize="14sp"
            />
            <LinearLayout
                android:id="@+id/add_lin"
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img1"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
            </LinearLayout>




        <TextView
            android:id="@+id/address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/add_lin"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img1"
            android:textColor="@color/color_69"
            android:textSize="12sp"
            />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_home_bg"
        />
</LinearLayout>
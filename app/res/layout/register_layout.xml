<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.kball.function.Mine.custom.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.kball.function.Mine.custom.TitleView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/mine_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="云球"
        android:textColor="@color/color_63"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/phone_rlin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/title_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机号"
            android:textColor="@color/color_63"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/recive_code_img"
            android:layout_toRightOf="@+id/phone_tv"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/color_63"
            android:textColorHint="@color/color_6c"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/djs_tv"
            android:visibility="gone"
            android:textSize="14sp"
            android:textColor="@color/color_green"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:gravity="center"
            android:background="@drawable/rectangle_green_shape1" />
        <ImageView
            android:id="@+id/recive_code_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/recive_code_img" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_6c" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/code_rlin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/phone_rlin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="@color/color_63"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/code_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/code_title"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/color_63"
            android:textColorHint="@color/color_6c"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_6c" />
    </RelativeLayout>

    <TextView
        android:id="@+id/join_yunqiu_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code_rlin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/join_yunqiu_bg"
        android:gravity="center"
        android:padding="12dp"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/readed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/readed"
            android:padding="4dp" />

        <TextView
            android:id="@+id/readed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/readed_img"
            android:gravity="center"
            android:text="已阅读"
            android:textColor="@color/color_66"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/readed_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/readed_text"
            android:gravity="center"
            android:text="《云球用户协议》"
            android:textColor="@color/color_green"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>

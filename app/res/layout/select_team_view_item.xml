<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/own_team_img"
            android:layout_width="80dp"
            android:src="@drawable/create_duihui"
            android:layout_height="80dp" />

        <LinearLayout
            android:id="@+id/own_team_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/own_team_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="球队名"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_person_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="球队人数"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="所在地"
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_6c" />

</LinearLayout>

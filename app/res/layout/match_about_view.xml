<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_home_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/match_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比赛名称："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/didian_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/saizhi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赛制："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/benfang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/duifang_rlin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/duifang_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对手:"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/duifang_df"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/duifang_tv"
                android:text=""
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />

        <RelativeLayout
            android:id="@+id/daiding_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/feiyong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比赛费用："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:background="#e4e4e4" />


        <RelativeLayout
            android:id="@+id/qj_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/fuwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频/数据服务："
                android:textColor="@color/color_63"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cancle_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/white">

            <TextView
                android:id="@+id/reason_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="取消原因："
                android:layout_centerVertical="true"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/reason_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/reason_title"
                android:text="取消原因"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/delete_match"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="#061628"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="删除比赛"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/refuse_sh_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/white">

            <TextView
                android:id="@+id/refuse_sh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="拒绝原因："
                android:layout_centerVertical="true"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/refuse_sh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/refuse_sh_title"
                android:text="拒绝原因"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/delete_match_2"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="#061628"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="删除比赛"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/refuse_yz_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@color/white">

            <TextView
                android:id="@+id/refuse_yz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="拒绝原因："
                android:layout_centerVertical="true"
                android:textColor="@color/color_63"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/refuse_yz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/refuse_yz_title"
                android:text="拒绝原因："
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                android:textSize="14sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/delete_match_3"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="#061628"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="删除比赛"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/baoming_detail_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/ybm_rlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <LinearLayout
                    android:id="@+id/ybm_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/right_img"
                    android:layout_toRightOf="@+id/tv1"
                    android:background="@color/white"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">

                </LinearLayout>

                <ImageView
                    android:id="@+id/right_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right_green_img" />

                <TextView
                    android:id="@+id/bm_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="已报名 0 人"
                    android:textColor="@color/color_63"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:id="@+id/daiding_rlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/dd_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="待定  0 人"
                    android:textColor="@color/color_63"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/dd_lin"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/right_img1"
                    android:layout_toRightOf="@+id/dd_title"
                    android:background="@color/white"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">


                </LinearLayout>

                <ImageView
                    android:id="@+id/right_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right_green_img" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginLeft="15dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:id="@+id/qingjia_rlin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/qj_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="请假 0 人"
                    android:textColor="@color/color_63"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/qj_lin"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/right_img2"
                    android:layout_toRightOf="@+id/qj_title"
                    android:background="@color/white"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">


                </LinearLayout>

                <ImageView
                    android:id="@+id/right_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right_green_img" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/authority3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/qingjia"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="请假"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/daiding"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="待定"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/baoming"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="报名"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/authority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="通过"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/no_pass"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="不通过"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/authority2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="应战"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/no_fight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="不应战"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/authority4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="gone">


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="应战"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/enter_score_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yq_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="录入战报"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

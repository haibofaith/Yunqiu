<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerVertical="true"
        android:layout_margin="12dp">

        <com.kball.function.Mine.custom.RadarView
            android:id="@+id/radar_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="进攻"
            android:textColor="@color/color_67"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="24dp"
            android:text="体能"
            android:textColor="@color/color_67"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="12dp"
            android:text="侵略性"
            android:textColor="@color/color_67"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="35dp"
            android:text="防守"
            android:textColor="@color/color_67"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="35dp"
            android:text="技术"
            android:textColor="@color/color_67"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进攻"
                android:gravity="center"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="防守"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体能"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="技术"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="侵略性"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attack_gross"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:gravity="center"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/defensive_gross"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/physical_gross"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/technology_gross"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/aggressive_gross"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/attack_img"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:src="@drawable/mine_up_icon"
                 />

            <ImageView
                android:id="@+id/defensive_img"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/mine_down_icon"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                 />

            <ImageView
                android:id="@+id/physical_img"
                android:src="@drawable/mine_keep_icon"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />

            <ImageView
                android:id="@+id/technology_img"
                android:src="@drawable/mine_up_icon"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />

            <ImageView
                android:id="@+id/aggressive_img"
                android:src="@drawable/mine_keep_icon"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attack_gains"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:gravity="center"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/defensive_gains"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/physical_gains"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/technology_gains"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/aggressive_gains"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="@color/color_63"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
